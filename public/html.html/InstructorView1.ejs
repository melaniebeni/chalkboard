<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, minimal-ui">
    <title>Instructor Page</title>
    <link rel="stylesheet" href="/CSS/instructorView1.css">

</head>
<body>
 <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div class="Instructor">
    <div class="logout" id="loButton">
        <button type="button" > Logout</button>
    </div>
    <div class="Logo">
        <img  alt="logo" src="html.html/Logo.jpeg" width="400" height="300">
    </div>
    <div class="info">
        <p><b><%= user.firstname %></b> <br>
            Email: <%= user.email %><br>
            Instructor ID: <%= user.id %>
        </p>
        <!-- instructor info  -->
    </div>

    <div class="classsearch" >
        <!-- class search  -->
        <p>Search for classes by entering the id, class name, or instructor. </p>
        <button id="newButton" class="new" onclick="myFunction()">New</button>

        <input  name="search" id="search" placeholder="Search" action="/search" method="GET">

        <button id="searchButton" class="search" onclick="sFunction()">Search</button>
    </div>
    <div class="searchresults">
    <% if(course!=null) {%>
    <p><%=course._id%></p>
        <ul>
            <li><a href="html.html/InstructorCourseView.html"><%= course.coursename %></a></li>
            
        </ul>
    <% } %>
    </div>
<% if(course!=null) {%>
  <p><%=course._id%></p>
    <div class="currentcourses">
        <!-- replaced by search results -->  
        <p><b>Courses</b></p>
        <% course.forEach(function(course){ %> 
         <select name="classes" multiple>
            <option value=<%= course.coursename %>><%= course.coursename %></option>
         <% }) %>
        </select>
          <% } %>
          

        <div class="search"  id="rosterButton">
            <button type="button" > Roster</button>
        </div>
        <div class="search" id="ViewButton">
            <button type="button" > View </button>
        </div>
        <div class="search" id="editButton">
            <button type="button" > Edit</button>
        </div>

    </div>
<script >
    function sFunction() {
        var x = document.getElementById("searchButton").value;
        document.getElementById("searchresults").innerHTML = x;
    }
       document.getElementById("searchButton").onclick = function () {
        location.href = "/search";
    };
       document.getElementById("newButton").onclick = function () {
           location.href = "html.html/InstructorNewEditCourseView.html";
       };
      document.getElementById("loButton").onclick = function () {
        location.href = "/";
    };
       document.getElementById("rosterButton").onclick = function () {
           location.href = "/roster";
       };
       document.getElementById("ViewButton").onclick = function () {
           location.href = "html.html/InstructorCourseView.html";
       };
       <!-- with existing -->
       document.getElementById("editButton").onclick = function () {
           location.href = "html.html/InstructorNewEditCourseView.html";
       };
</script>


</div>
</body>
</html>